<div class="row collapse">
  <div class="columns large-8 large-centered text-center page-title">
    <h1 class="heading1"><%= I18n.t("devise.sessions.new.sign_in") %></h1>
  </div>
</div>
<%= render "decidim/devise/shared/omniauth_buttons" %>
<div class="row">
  <div class="columns large-6 medium-centered">
        <span class="register__separator">
          <span class="register__separator__text"><%= I18n.t("decidim.devise.shared.omniauth_buttons.or") %></span>
        </span>
    <%= button_tag t("decidim.login"), class: "button-login", onclick: "changeVisibilityLoginBox()" %>
    <div class="card login__box">
      <div class="card__content">
        <%= decidim_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "register-form new_user" }) do |f| %>
          <div>
            <div class="field">
              <%= f.email_field :email, autofocus: true %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
          <fieldset>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
              </div>
            <% end %>
          </fieldset>
          <div class="actions">
            <%= f.submit I18n.t("devise.sessions.new.sign_in"), class: "button expanded" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
